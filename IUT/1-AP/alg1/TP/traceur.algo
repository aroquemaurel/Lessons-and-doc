-- Bibliotheque concernant l'utilisation de differents compteurs necessaires par exemple pour les graphiques
-- Cette bibliotheque doit etre importee pour que les sous-programmes puissent etre utilises.
importer entréeSortie;


-- compteur prend pour valeur initiale valeur
procédure initialiser (sortie compteur <Entier>, entrée valeur <Entier>)
début
    compteur <- valeur ;
fin

-- compteur devient egal a compteur + 1
procédure ajouterUn (màj compteur <Entier>)
début
    compteur <- compteur + 1 ;
fin 

-- compteur devient egal a compteur - 1
procédure soustraireUn (màj compteur <Entier>)
début
    compteur <- compteur - 1 ;
fin 

-- retourne VRAI si valeur1 = valeur2 et FAUX sinon
fonction valeursEgales (entrée valeur1 <Entier>, entrée valeur2 <Entier>)
retourne <Booléen>
début
   retourner(valeur1 = valeur2) ;
fin 

-- compteur devient egal Ã  compteur + n
procédure ajouterN (màj compteur <Entier>, entrée n <Entier>)
début
    compteur <- compteur + n ;
fin  
