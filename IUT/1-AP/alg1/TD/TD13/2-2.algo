importer entreeSortie;
Programme rechercherPlateau 
glossaire
	valeur <Entier>;
	valeurPrecedente <Entier>;
	lgPlateau <Entier>;
	valPlateau <Entier>;

debut
	lire(valeur);
	lgPlateau <- 1;
	valPlateau <- v;

	tantque valeur /= 0 faire
		lgPlateau <- 0;
		valPlateau <- valeur;
		valeurPrecedente <- valeur;
		tantque valeur = valeurPrecedente faire
			lgPlateau <- lgPlateau + 1;
			lire(valeur);
		fin tantque;
		ecrire(lgPlateau);
		ecrire(valPlateau);
	fin tantque;
fin
