--SOLUTION 1

procedure lireSuite (sortie suite <TabSuite>)

glossaire
	valeur <Entier>; -- valeur courante
	i <Entier>; -- indice de parcous
	
debut
	i <- 0;
	lire(valeur);
	
	tantque valeur /= 0 faire
		i <- i + 1 ;
		suite.Elem[i] <- valeur;
		lire(valeur);
	fin tantque;
	suite.nbElem <- i;
fin

