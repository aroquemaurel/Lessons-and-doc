#include <stdio.h>
#include <stdlib.h>

int entryNumber() ;
int calculateDivisorsSum(int number) ;
int main(int argc, char** argv) {

	return 0;
}

int entryNumber() {
	int number = 0
	do {
		scanf("%d", &number);	
	} while(number > 0);

	return (number);
}

int calculateDivisorsSum(int number) {
	int sum = 0;
	int i = 1;
	
	for(; i < number ; ++i) {
		if(number % i == 0) {
			sum += i;
		}
	}

	return (sum);
}

bool isPerfectNumber(int number) {
	int i;
	int sum = 0;

	for (i = 1 ; i <= number/2  ; ++i) {
		if (number % i == 0) {
			sum += i;
		}
	}

	return (sum == number);
}


void displayPerfectNumber(int beginInterval, int endInterval) {
	int i;
	for(i=beginInterval ; i < endInterval; ++i) {
		if(isPerfectNumber(i)) {
			printf("%d ", i);
		}
	}
}

int nearestPerfectNumbers(int number) {
	int i = 0, j = 0;
	int distanceLower = 0;
	int distanceUpper= 0;

	for(i=number ; !isPerfectNumber(i) ; --i) {
		++distanceLower;
	}
	for(i=number ; !isPerfectNumber(i) ; ++i) {
		++distanceUpper;
	}

	return((distanceLower < distanceUpper) ? distanceLower : distanceUpper);
}

int* allPerfectNumber(int beginInterval, int endInterval) {
	int i;
	for(i=beginInterval ; i < endInterval; ++i) {
		if(isPerfectNumber(i)) {
			printf("%d ", i);
		}
	}

}
