-- Calcul la somme des chiffres de l'entier e
fonction sommeChiffre (entree e <Entier>)
						retourne <Entier>

glossaire
	quotient <Entier>;
	sommeReste <Entier>;

debut
	quotient <-e ;
	sommeReste <- 0;
	
	tantque quotient /= 0 faire
		sommeReste <- sommeReste + (quotient mod 10);
		quotient <- quotient div 10;
	fin tantque;
	retourner(sommeReste);
fin
